---
import { Image } from "astro:assets";
import avatar from "../assets/avatar.webp";
import BaseLayout from "../layouts/base-layout.astro";
---

<BaseLayout>
    <div class="avatar-container">
        <Image src={avatar} alt="Avatar image" class="avatar-image" />
    </div>
    <h1>@calbch</h1>
    <h2>bounty hunter - brother in tech</h2>
    <ul>
        <li>
            <a href="https://cal.com/calbch/15min">talk to me</a>
        </li>
        <li>
            <a href="/writing">writing</a>
        </li>
        <li>
            <a href="https://github.com/calbch">GitHub</a>
        </li>
        <li>
            <a href="https://twitter.com/calbch">X the everything app</a>
        </li>
    </ul>
</BaseLayout>

<style>
    .avatar-container {
        width: 256px;
        height: 256px;
        position: relative;
    }

    .avatar-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center 30%;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 2rem;
        letter-spacing: -2px;
        margin: 0.5rem 0 0.25rem;
    }

    h2 {
        font-size: 1.2rem;
        font-weight: normal;
        margin: 0.4rem 0 0.4rem;
    }

    ul {
        list-style: none;
        text-align: center;
        padding: 0;
    }

    li {
        margin: 0.5rem 0;
    }
</style>
